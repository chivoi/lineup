<div class="container">
  <h2>Your conversation with <%= @conversation.recipient.profile.name %></h2>
  <div class="jumbotron mssg border-rad">
  <div class="mb-3">
  <% @messages.each do |message| %>
    <% if message.body %>
      <% user = User.find(message.user_id) %>
      <div class="item">
        <div class="content">
          <div class="header">
            <strong><%= user.profile.name %></strong>     <%= message.message_time %>
          </div>
          <div class="list">
            <div class="item">
              <i class="right triangle icon"></i>
              <%= message.body %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>

  <%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control border-rad" %>
  </div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
  <div class="mt-3">
    <%= f.submit "Add Reply", class: "btn" %>
  </div>
  <% end %>
  </div>
  <%= link_to 'Back to conversations', conversations_path, class: "btn border-rad" %>
</div>

